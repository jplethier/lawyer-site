%head
  %title Bruna Xavier Advocacia

  %meta{ name: 'description', content: 'Bruna Xavier, advogada formada pela Universidade Cândido Mendes, atua em diversas áreas, como Correspondência Jurídica, Área Trabalhista e Direito do Consumidor.' }
  %meta{ name: 'keywords', content: 'lei, direito, advocacia, advogado, consumidor, penal, processo, correspondente jurídico' }
  %meta{ charset: 'utf-8'}
  %meta{ name: 'viewport', content: 'width=device-width,initial-scale=1' }
  -# Use the .htaccess and remove these lines to avoid edge case issues.  More info: h5bp.com/b/378
  %meta{ 'http-equiv' => 'X-UA-Compatible', content: 'IE=edge,chrome=1' }

  = stylesheet_link_tag :application
  = csrf_meta_tag
  %link{ rel: "shortcut icon", href: "/favicon.ico", type: "image/x-icon" }
  %link{ rel: "icon", href: "/favicon.ico", type: "image/x-icon" }

%body.home
  <!--[if lt IE 7]>
  <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
  <![endif]-->

  = flash_messages

  .nav
    .nav-wrapper
      .left-content
        %a{ href: '/' }
          %h1
            Bruna
            %b Xavier
          %span= t('strings.lawyer')
          %span{ style: 'clear: right;' } OAB/RJ 183.966
      %ul.menu
        %li
          = link_to t('strings.home'), '/', class: action_name == 'index' ? 'active' : ''
        %li
          = link_to t('strings.practice_areas'), practice_areas_path, class: action_name == 'practice_areas' ? 'active' : ''
        %li
          = link_to t('strings.about'), about_path, class: action_name == 'about' ? 'active' : ''
        %li
          = link_to t('strings.contact'), contact_path, class: action_name == 'contact' ? 'active' : ''

  %article
    = yield

  #blocker{ onclick: 'Popup.close();' }
  #popup
    .main_popup

  .clear

  %footer
    .footer-wrapper
      %p
        © 2013 Bruna Ribeiro Xavier
      .follow
        %p= t('strings.follow')
        %a{ href: 'https://www.facebook.com/brunarxavieradvocacia', title: 'Facebook', target: '_blank' }
          %img{ src: asset_path('fb-icon.png'), alt: 'Facebook' }
        / %a{ href: '', title: 'Twitter', target: '_blank' }
        /   %img{ src: asset_path('tw-icon.png'), alt: 'Twitter' }

  = javascript_include_tag :application
  = yield :javascript
